document.querySelectorAll(".accordion-header").forEach(e=>{e.addEventListener("click",()=>{const t=e.nextElementSibling;e.querySelector(".accordion-header-text");e.classList.toggle("activebar"),e.classList.contains("activebar")?t.style.maxHeight=t.scrollHeight+"px":t.style.maxHeight=0,document.querySelectorAll(".accordion-header").forEach(t=>{t!==e&&(t.classList.remove("activebar"),t.nextElementSibling.style.maxHeight=0)})})});